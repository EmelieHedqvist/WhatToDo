<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/search_opaque">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/dispLayout"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="333dp"
            android:layout_marginTop="20dp">
            <TextView android:text="@string/wtd2"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textColor="#FFFFFF"
                android:id="@+id/wtd"
                android:textSize="38sp"
                android:fontFamily="sans-serif-light"
                />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_marginTop="30dp">
            <View
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:layout_below="@id/wtd"
                android:background="@android:color/white"
                android:id="@+id/line"
                android:layout_span="2" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_below="@id/line"
                android:layout_centerHorizontal="true"
                android:background="@drawable/star_icon" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="30dp">
            <TextView android:text="blabla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_below="@id/imageView"
                android:id="@+id/name"
                android:textSize="38sp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:layout_centerHorizontal="true"
                android:background="@drawable/star_icon" />

            <TextView android:text="0730"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:id="@+id/number"
                android:textSize="38sp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/map"
                android:layout_centerHorizontal="true"
                android:background="@drawable/star_icon" />

            <TextView android:text="0730"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:id="@+id/address"
                android:textSize="38sp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/connect"
                android:layout_centerHorizontal="true"
                android:background="@drawable/star_icon" />

        </TableRow>
    </TableLayout>
</RelativeLayout>
