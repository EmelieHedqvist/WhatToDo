<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/default_background">

    <TextView android:text="What To Do?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:id="@+id/wtd"
        android:textSize="38sp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"/>

    <View
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@id/wtd"
        android:background="@android:color/white"
        android:id="@+id/line"/>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_below="@+id/line"
        android:columnCount="6"
        android:rowCount="4">

        <ImageButton

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/barbutton"
            android:background="@drawable/barbutton"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="left"
            android:onClick="createChoice"
            />

        <ImageButton

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/resturantbutton"
            android:background="@drawable/restaurantbutton"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_gravity="right"
            android:onClick="createChoice"
            />

        <ImageButton

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/theater"
            android:background="@drawable/barbutton"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="left"
            android:onClick="createChoice"
            />

        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/sport"
            android:background="@drawable/barbutton"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_gravity="right"
            android:onClick="createChoice"
            />

        <ImageButton

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/random"
            android:background="@drawable/barbutton"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_gravity="center"
            android:onClick="createChoice"
            />

        <ImageButton
            android:layout_margin="10dp"
            android:background="@drawable/info"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="bottom|left"
            android:onClick="infoView"
            />

        <ImageButton
            android:layout_margin="10dp"
            android:background="@drawable/settings"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_row="2"
            android:layout_column="5"
            android:layout_gravity="bottom|right"
            android:onClick="settingView"
            />


    </GridLayout>
</RelativeLayout>